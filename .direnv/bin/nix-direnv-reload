#!/usr/bin/env bash
set -e
if [[ ! -d "/home/dezash/projects/rust-drivers/chsc6x" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/dezash/projects/rust-drivers/chsc6x")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/dezash/projects/rust-drivers/chsc6x" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/dezash/projects/rust-drivers/chsc6x/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/dezash/projects/rust-drivers/chsc6x/.envrc" "/home/dezash/projects/rust-drivers/chsc6x/.direnv"/*.rc
